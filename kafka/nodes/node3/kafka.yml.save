version: "3.9"

services:
    kafka2:
        image: confluentinc/cp-kafka:latest
        volumes:
            - kafkavol:/kafka-data 
        ports: 
            - 9093:9093
        environment:
            KAFKA_ZOOKEEPER_CONNECT: bddst-g04-Node1.uvm.sdu.dk:2181
            KAFKA_LISTENER_SECURITY_PROTOCOL_MAP: "INTERNAL:PLAINTEXT,EXTERNAL:PLAINTEXT,DOCKER_LISTENER:PLAINTEXT"
            KAFKA_            KAFKA_LISTENERS=PLAINTEXT://0.0.0.0:9092                              
            KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://kafka1:9092    LISTENERS: INTERNAL://0.0.0.0:9091,EXTERNAL://0.0.0.0:19092,DOCKER_LISTENER://0.0.0.0:9092
            KAFKA_ADVERTISED_LISTENERS: "INTERNAL://kafka:9095,EXTERNAL://host.docker.internal:29092,DOCKER_LISTENER://kafka:9096"
            KAFKA_INTER_BROKER_LISTENER_NAME: INTERNAL
            KAFKA_BROKER_ID: 2
            KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR: 1
            KAFKA_PARTITION_ASSIGNMENT_STRATEGY: org.apache.kafka.clients.consumer.RoundRobinAssignor
        restart: unless-stopped

volumes:
    kafkavol:
